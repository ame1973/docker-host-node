version: "3.7"

services:
  
  node:
    image: node:lts
    restart: unless-stopped
    tty: true
    working_dir: /opt/app
    volumes:
      - ./src:/opt/app
    networks:
      - internal
      - traefik-proxy
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=traefik-proxy"
      - "traefik.http.routers.YOUR_PROJECT_NAME.rule=Host(`YOUR_PROJECT_DOMAIN.com`)"
      - "traefik.http.routers.YOUR_PROJECT_NAME.entrypoints=websecure"

networks:
  traefik-proxy:
    external: true
  internal:
    driver: bridge
